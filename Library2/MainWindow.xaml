<Window x:Class="Library2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel >
            <Label Content="Library" HorizontalAlignment="Center" FontSize="36"/>
            <DockPanel Margin="40" HorizontalAlignment="Center" Height="100" LastChildFill="False">
                <Button x:Name="Books" Content="Books" Width="224" Click="Books_Click"/>
                <Button x:Name="Clients" Content="Clients" Width="224" Click="Clients_Click"/>
                <Button x:Name="Rent" Content="Rent a book" Width="224" Click="Rent_Click"/>
            </DockPanel>
            <DockPanel  HorizontalAlignment="Center" Height="100" LastChildFill="False">
                <Button x:Name="Categories" Content="Categories" Width="224" Click="Categories_Click" />
                <Button x:Name="Authors" Content="Authors" Width="224" Click="Authors_Click" />
                
            </DockPanel>

        </StackPanel>

    </Grid>
</Window>
