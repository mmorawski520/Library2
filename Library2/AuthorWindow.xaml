<Window x:Class="Library2.AuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library2"
        mc:Ignorable="d"
        Title="AuthorWindow" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="50 90 50 30">
            <Label Content="Name" ></Label>
            <TextBox x:Name="txtBoxName"></TextBox>
            <Label Content="Surname" ></Label>
            <TextBox x:Name="txtBoxSurname"></TextBox>
            <Button x:Name="btnAddAuthor" Margin="30 15 30 15 " Content="Add author" Width="90" Click="btnAddAuthor_Click"></Button>
            <Button x:Name="btnBack" Content="Back" Width="90" Click="btnBack_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
